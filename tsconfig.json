{
    "compilerOptions": {
        "target": "es2022",
        "lib": ["es2021"],
        "moduleResolution": "node",
        "outDir": "dist",
        "outFile": "dist/index.js",
        "sourceRoot": ".",
        "declaration": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "strict": true,
        "stripInternal": true,
        "plugins": [{ "transform": "ts-transformer-inline-file/transformer" }]
    }
}
